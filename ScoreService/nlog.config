<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Error" internalLogFile="c:\temp\nlog-internal.log">

	<targets>
		<target name="logfile" xsi:type="File"
		        layout="${longdate} - ${level} - ${threadid} - ${logger}${replace-newlines:${onexception: - ${exception:format=tostring} ${stacktrace}}} - ${message}"
		        fileName="/app/logs/logfile-ScoreService-${hostname}-${shortdate}.log"
		        archiveFileName="/app/logs/archive/logfile-ScoreService-${hostname}-${shortdate}_{#}.log"
		        archiveEvery="Day"
		        archiveDateFormat="yyyy_MM_dd"
		        archiveNumbering="DateAndSequence"
		        maxArchiveFiles="50"
		        archiveAboveSize="104857600"
		        concurrentWrites="true" />
	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeTo="logfile" />
	</rules>
</nlog>