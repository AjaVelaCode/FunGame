<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Error" internalLogFile="c:\temp\nlog-internal.log">

	<variable name="logdir" value="C:\Logs\FunGame"/>
	<variable name="logdirArchive" value="C:\Logs.Archives\FunGame"/>

	<targets>
		<target name="logfile" xsi:type="File"
		        layout="${longdate} - ${level} - ${threadid} - ${logger}${replace-newlines:${onexception: - ${exception:format=tostring} ${stacktrace}}} - ${message}"
		        fileName="${logdir}\score.log"
		        archiveFileName="${logdirArchive}\history.score_{#}.log"
		        archiveEvery="Day"
		        archiveDateFormat="yyyy_MM_dd"
		        archiveNumbering="DateAndSequence"
		        maxArchiveFiles="50"
		        archiveAboveSize="104857600"
		        concurrentWrites="true"
		/>
	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeTo="logfile"/>
	</rules>
</nlog>